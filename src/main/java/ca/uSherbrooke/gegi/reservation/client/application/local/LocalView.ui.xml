<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:dp="urn:import:com.google.gwt.user.datepicker.client">
    <ui:style src='LocalStyle.css'/>
    <g:HTMLPanel>
        <header>
            <div class="container">
                <h1>Horaire</h1>
            </div>
        </header>

        <div class="container box">
            <p>
                <strong>Catégorie de categorie_local_id:</strong>
            </p>
            <g:ListBox ui:field="listBox"/>
            <p>
                <strong>Période début:</strong>
            </p>
            <g:ListBox ui:field="listBoxPeriodeDebut"/>

            <p>
                <strong>Période fin:</strong>
            </p>
            <g:ListBox ui:field="listBoxPeriodeFin"/>

            <p>
                <strong>Date:</strong>
            </p>
            <dp:DateBox ui:field="dateBox"/>

            <g:Button ui:field="searchButton">
                Rechercher
            </g:Button>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
